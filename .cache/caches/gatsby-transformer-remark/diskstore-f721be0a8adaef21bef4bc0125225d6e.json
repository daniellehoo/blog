laurennikrooz)","position":{"start":{"line":25,"column":1,"offset":3162},"end":{"line":25,"column":44,"offset":3205},"indent":[]}},{"type":"break","position":{"start":{"line":25,"column":44,"offset":3205},"end":{"line":26,"column":1,"offset":3208},"indent":[1]}},{"type":"text","value":"Costumes: Zara Mirkin (@zaraeloise)","position":{"start":{"line":26,"column":1,"offset":3208},"end":{"line":26,"column":36,"offset":3243},"indent":[]}}],"position":{"start":{"line":25,"column":1,"offset":3162},"end":{"line":26,"column":36,"offset":3243},"indent":[1]}},{"type":"paragraph","children":[{"type":"image","title":null,"url":"https://c1.staticflickr.com/4/3947/33510482712_6d578b0fcd_z.jpg","alt":null,"position":{"start":{"line":29,"column":1,"offset":3248},"end":{"line":29,"column":69,"offset":3316},"indent":[]}},{"type":"text","value":"Photo by Alycia Kravitz","position":{"start":{"line":29,"column":69,"offset":3316},"end":{"line":29,"column":92,"offset":3339},"indent":[]}}],"position":{"start":{"line":29,"column":1,"offset":3248},"end":{"line":29,"column":92,"offset":3339},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"Junglepussy, her dancers, and DJ Joey Labeija killed their set.","position":{"start":{"line":31,"column":1,"offset":3341},"end":{"line":31,"column":64,"offset":3404},"indent":[]}}],"position":{"start":{"line":31,"column":1,"offset":3341},"end":{"line":31,"column":64,"offset":3404},"indent":[]}},{"type":"paragraph","children":[{"type":"image","title":null,"url":"https://c1.staticflickr.com/3/2926/33510482852_fa538272af_z.jpg","alt":null,"position":{"start":{"line":34,"column":1,"offset":3409},"end":{"line":34,"column":69,"offset":3477},"indent":[]}},{"type":"text","value":"Photo by Alycia Kravitz","position":{"start":{"line":34,"column":69,"offset":3477},"end":{"line":34,"column":92,"offset":3500},"indent":[]}}],"position":{"start":{"line":34,"column":1,"offset":3409},"end":{"line":34,"column":92,"offset":3500},"indent":[]}},{"type":"par